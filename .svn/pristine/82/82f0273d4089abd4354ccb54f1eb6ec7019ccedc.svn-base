<?php namespace JerryLib\System;

trait Init {
	
    protected static $objects;
	//对象缓存，妈妈再也不用担心对象多次实例化了
    public static function Init($table = '', $db = '') { //使用DB初始化
        if(!$db && $table) {
            if(!isset(self::$objects[$table])) self::$objects[$table] = new self($table);
            return self::$objects[$table];
        }
        if($db && !$table) {
            if(!isset(self::$objects[$db])) self::$objects[$db] = new self($db);
            return self::$objects[$db];
        }
        if(!$db && !$table) return new self();

        if(!isset(self::$objects[$table.$db])) self::$objects[$table.$db] = new self($table, $db);
        return self::$objects[$table.$db];
    }

}